.contanier {
  margin: 0;
  padding: 0;
  list-style: none;
}
.header {
  width: 100vw;
  height: 130px;
  background-color: #FF8D1A;
  position: relative;
  margin-top: 0px;
  padding: 10px 20px;
  z-index: -1;
}
.header .user-head {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20px;
}
.header .user-head .name-hi {
  display: flex;
  flex-direction: column;
  margin-left: 90px;
}
.header .user-head .name-hi .name {
  font-size: 18px;
  line-height: 20px;
}
.header .user-head .name-hi .hello {
  font-size: 14px;
  line-height: 14px;
  margin-top: 4px;
}
.user-pic {
  width: 60px;
  height: 60px;
  position: absolute;
}
.vip {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.vip .open-vip {
  background-color: #3D3D3D;
  width: 80vw;
  height: 40px;
  border-radius: 8px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.vip .open-vip > text {
  font-size: 14px;
  line-height: 14px;
  margin-left: 20px;
  color: antiquewhite;
}
.vip .open-vip .recharge {
  width: 30px;
  height: 10px;
  border-radius: 12px;
  font-size: 12px;
  line-height: 12px;
  text-align: center;
}
.section {
  width: 90%;
  margin: 0 auto;
}
.section .user-list {
  display: flex;
  flex-direction: column;
}

